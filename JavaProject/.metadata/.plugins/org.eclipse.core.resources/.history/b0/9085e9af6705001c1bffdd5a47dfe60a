package ch07;

public class BankMainTest {

	public static void main(String[] args) {
		Bank bank = new Bank();
		
		bank.deposit(10_000);
		bank.showInfo();
		bank.withdraw(5_000);
		bank.showInfo();
		
		// 신입 개발자가 실수로 멤버 변수에 바로 접근해서 잔액을 수정함.
		
		bank.balance = 1_000_000;
		bank.showInfo();
		
	}

}
