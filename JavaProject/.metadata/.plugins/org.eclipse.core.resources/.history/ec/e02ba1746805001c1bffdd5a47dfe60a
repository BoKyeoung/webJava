package ch07;

public class BankMainTest {

	public static void main(String[] args) {
		Bank bank = new Bank();
		
		bank.deposit(10000);
		bank.showInfo();
		bank.withdraw(5000);
		bank.showInfo();
		
		// 신입 개발자가 실수로 멤버 변수에 바로 접근해서 잔액을 수정함.
		
//		bank.balance = 1000000;
		bank.showInfo();
		
		// 접근 제어 지시자
		// 4가지
		// public - 누구나 접근을 허용하게 한다.
		// default - 같은 패키지 내에서는 접근을 허용한다.
		
	}

}
